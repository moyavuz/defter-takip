    <!--
        Added the entity Calisan.
    -->
    <changeSet id="20190213162549-1" author="jhipster">
        <createTable tableName="calisan">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tckimlikno" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="adi" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="soyadi" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="phone_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="giris_tarihi" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="cikis_tarihi" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="ucret" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="calisan_turu" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="aktif_mi" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="unvan_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_calisan_unvan_id" />
            </column>
            <column name="sorumlu_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="calisan" columnName="giris_tarihi" columnDataType="datetime"/>
        <dropDefaultValue tableName="calisan" columnName="cikis_tarihi" columnDataType="datetime"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
