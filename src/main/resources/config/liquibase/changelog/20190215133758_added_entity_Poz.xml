    <!--
        Added the entity Poz.
    -->
    <changeSet id="20190215133758-1" author="jhipster">
        <createTable tableName="poz">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ad" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="aciklama" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="kisaltma" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="yil" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="fiyat_telekom" type="double">
                <constraints nullable="true" />
            </column>

            <column name="fiyat_girisim" type="double">
                <constraints nullable="true" />
            </column>

            <column name="fiyat_taseron" type="double">
                <constraints nullable="true" />
            </column>

            <column name="fiyat_tasere" type="double">
                <constraints nullable="true" />
            </column>

            <column name="kdv" type="double">
                <constraints nullable="true" />
            </column>

            <column name="malzeme_mi" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="birim_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
